model RipsAU {
  id              String   @id @default(uuid())              @map("id")
  batchId         String                                    @map("batch_id")
  encounterId     String                                    @map("encounter_id")
  patientId       String                                    @map("patient_id")
  invoiceNumber   String                                    @map("invoice_number")
  admitAt         DateTime                                  @map("admit_at")
